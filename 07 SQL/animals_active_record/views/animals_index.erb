<h3>This should show all of our animals</h3>

<%= @all_animals %>

<% @all_animals.each do |animal| %>
  <h4>
    <%= animal["species"] %>
  </h4>

  <p>
    <a href="/animals/<%= animal["id"] %>">
    <img class="photos" src="<%= animal["image"] %>"></a>
  </p>

  <p>
    <%= animal["description"] %>
  </p>

  <hr>

<% end %>



