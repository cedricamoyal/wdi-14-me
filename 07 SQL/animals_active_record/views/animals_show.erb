<h3>This should show a single animal</h3>

<%= @animal %>

<h4>
  <%= @animal["species"] %>
</h4>

<img src="<%= @animal["image"] %>">

<p>
  <%= @animal["description"] %>
</p>

<% if @animal.habitat %>
        <p>
          <a href="/habitats/<%= @animal.habitat.id %>">
            This belongs to <%= @animal.habitat.landscape %>
          </a>
        </p>
<% end %>

<p>
  <a href="/animals/<%= @animal["id"] %>/edit">
     Edit this animal
  </a>
</p>

<p>
  <a href="/animals/<%= @animal["id"] %>/delete">
     Delete this animal
  </a>
</p>

<p>
  <a href="/animals">
     See all the animals</a>
</p>
