<h2>This should show all your trips:</h2>

<ul>
  <% @current_user.trips.each do |trip| %>
    <li>
              <h4>Current user name: <%= @current_user.name %></h4>
              <h4>Trip name: <%= link_to trip.name, "/trips/#{trip.id}" %></h4>
              <h4>Start date: <%= trip.startDate %></h4>
              <h4>Description: <%= trip.description %></h4>
              <h4>Trip ID: <%= trip.id %></h4>
              <h4>trip.user_id: <%= trip.user_id %></h4>
              <hr>
              <hr>
    </li>
  <% end %>
</ul>

<p>oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo</p>
<p>oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo</p>

  <% if @current_user && @current_user.admin %>

      <ul>
          <% @users.each do |user| %>
                  <li>
                    <% user.trips.each do |trip| %>
                            <h4>User name: <%= user.name %></h4>
                            <h4>Trip name: <%= link_to trip.name, "/trips/#{trip.id}" %></h4>
                            <h4>Start date: <%= trip.startDate %></h4>
                            <h4>Description: <%= trip.description %></h4>
                            <h4>Trip ID: <%= trip.id %></h4>
                            <h4>trip.user_id: <%= trip.user_id %></h4>
                            <hr>
                            <p>- - - - - - - - - - - -- - - - -</p>
                    <% end %>
                  </li>
          <% end %>
      </ul>

  <% end %>

<%= link_to "Create a new trip", new_trip_path(@current_user) %>
