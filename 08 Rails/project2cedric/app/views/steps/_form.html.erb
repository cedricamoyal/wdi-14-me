<%= form_for @step do |f| %>

<div class='col-md-6 col-md-offset-3'>
  <div class="stepsDetailsShow specialForm">


  <p>
    <%= f.label :trip_id, :class => "labels", :class => "label1" %>
    <%= f.select :trip_id, @current_user.trips.map { |a| [ a.name, a.id ]}, :include_blank => true, :class => "inputs", :class => "label2" %>
  </p>


  <p>
    <%= f.label :visit_id, :class => "labels", :class => "label1" %>
    <%= f.select :visit_id, Visit.all.map { |a| [ a.name, a.id ]}, :include_blank => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :duration, :class => "labels", :class => "label1" %>
    <%= f.text_field :duration, :required => true, :class => "inputs", :class => "label2" %>
  </p>

  <p>
    <%= f.label :position, :class => "labels", :class => "label1" %>
    <%= f.text_field :position, :required => true, :class => "inputs", :class => "label2" %>
  </p>

<br>

  <%= f.submit %>

</div>
</div>

<% end %>
