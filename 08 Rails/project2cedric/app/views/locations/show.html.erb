
<div class='container'>
  <div class='row text-center'>
          <div class='col-md-12'>
        <h2><%= @location.name %></h2>
        </div>
  </div>

  <div class='row'>
      <div class='col-md-8'>
              <div class="stepsDetailsShow">
                    <%= link_to(image_tag( @location.image, :class => 'featured'), @location) %>
              </div>
      </div>

  <div class='col-md-4'>
    <div class="stepsDetailsShow">
          <h5>Population: <span><%= @location.population %></span></h5>
          <h5>Area: <span><%= @location.area %></span></h5>
          <br>
          <h5>The different countries:</h5>
          <% @location.countries.each do |country| %>
            <span>| <%= link_to country.name, "/countries/#{country.id}" %><span>
          <% end %>
        </div>
      </div>
    </div>

    <div class='row text-center'>
            <div class='col-md-12'>
                    <h2>Countries in that part of the world:</h2>
          </div>
    </div>

<% @location.countries.each do |country| %>
<div class='col-md-4'>
  <div class="stepsDetailsShow">

        <h4><%= link_to country.name, "/countries/#{country.id}" %></h4>
        <%= link_to( image_tag(country.flag, :class => 'thumbnail'), country ) %>

        <h5>Location: <span><%= link_to country.location.name, "/locations/#{country.location.id}" %></span></h5>
        <h5>Capital city: <span><%= country.capitalCity %></span></h5>
        <h5>Language: <span><%= country.language %></span></h5>
        <h5>Currency: <span><%= country.currency %></span></h5>
        <h5>Population: <span><%= country.population %></span></h5>
        <h5>Area: <span><%= country.area %></span></h5>
        <h5>Population density: <span><%= country.popDensity %></span></h5>

  </div>
</div>
<% end %>

</div>
