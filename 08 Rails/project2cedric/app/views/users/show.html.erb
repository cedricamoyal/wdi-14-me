
<div class='container'>
  <div class='row text-center'>
          <div class='col-md-12'>
                <h2><%= @user.name %></h2>
              </div>
          </div>

      
      <div class='col-md-4 col-md-offset-4'>
        <div class="stepsDetailsShow specialForm">
                <h4><%= @user.email %></h4>
                <!-- <p> Password digest: <%= @user.password_digest %> </p> -->

                <%= link_to(image_tag( @user.image, :class => 'thumbnail'), @user) %>

                <br>
                <div class='row text-center'>
                <button type='button' class='btn btn-lg btn-default'><%= link_to( "Check your trips", trips_path( @user)) %></button>
                </div>


                <br>
                <br>

                <div class='row text-center'>
                    <button type='button' class='btn btn btn-default'><%= link_to( "Edit user", edit_user_path( @user)) %></button>
                    <button type='button' class='btn btn btn-default'><%= link_to( "Delete user", user_path( @user), :method => :delete, :data => { :confirm => 'Are you sure?'}) %></button>
                </div>
        </div>
        </div>

  </div>
