
<br>
<div class='container'>
  <div class='row text-center'>
          <div class='col-md-12'>
            <h2><%= @flight.number %></h2>
          </div>
  </div>

  <br>

<br>
<div class='row'>

    <div class='col-md-4 col-md-offset-4'>
      <div class="stepsDetailsShow">
              <h5>Origin: <span><%= @flight.origin %></span></h5>
              <h5>Destination: <span><%= @flight.destination %></span></h5>
              <h5>Date: <span><%= @flight.flightDate %></span></h5>
              <h5>Plane_ID: <span><%= @flight.plane_id %></span></h5>
                <br>

<% if @current_user && @current_user.admin %>
              <div class='row text-center'>
              <button type='button' class='btn btn btn-default'><%= link_to "Edit Flight", edit_flight_path( @flight ), :class => "links" %></button>

              <button type='button' class='btn btn btn-default'><%= link_to "Delete Flight", @flight, :method => :delete, :data => { :confirm => 'Are you sure?'}, :class => "links" %></button>
              </div>
<% end %>

        </div>
      </div>
    </div>
