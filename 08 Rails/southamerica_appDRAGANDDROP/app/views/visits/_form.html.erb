<%= form_for @visit do |f| %>
  <p>
    <%= f.label :name, :class => "labels" %>
    <%= f.text_field :name, :required => true, :class => "inputs" %>
  </p>
  <!-- <p>
    <%= f.label :type %>
    <%= f.text_field :type, :required => true %>
  </p> -->

  <p>
    <%= f.label :duration, :class => "labels" %>
    <%= f.text_field :duration, :required => true, :class => "inputs" %>
  </p>
  <p>
    <%= f.label :image, :class => "labels" %>
    <%= f.url_field :image, :required => true, :class => "inputs" %>
  </p>

  <p>
    <%= f.label :country_id, :class => "labels" %>
    <%= f.select :country_id, Country.all.map { |a| [ a.name, a.id ]}, :include_blank => true, :class => "inputs" %>
  </p>


  <%= f.submit %>

<% end %>
